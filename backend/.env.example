# Application Settings
PROJECT_NAME="AI-powered Cyber Attack Detection"
VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
LOG_LEVEL="INFO"

# Security
SECRET_KEY="generate-a-secure-secret-key"
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM="HS256"

# Database
DATABASE_URL="postgresql+asyncpg://postgres:123@localhost:5432/cyber_defense"
ASYNC_DATABASE_URL="postgresql+asyncpg://postgres:123@localhost:5432/cyber_defense"

# Redis Cache
REDIS_URL="redis://localhost:6379/0"
REPORT_CACHE_TTL=3600  # 1 hour

# ML Settings
MODEL_PATH="/app/models"
MAX_SEQUENCE_LENGTH=512
TRAINING_BATCH_SIZE=32
HIGH_FREQUENCY_THRESHOLD=100

# AWS Configuration
AWS_ACCESS_KEY="your-aws-access-key"
AWS_SECRET_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
BACKUP_BUCKET="cyber-defense-backups"

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
MONITORING_INTERVAL=60

# Performance Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
RESPONSE_TIME_THRESHOLD=2.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
ML_RATE_LIMIT_PER_MINUTE=10

# Integration Settings
SIEM_URL="https://your-siem-instance/api"
SIEM_API_KEY="your-siem-api-key"

# Security Tools
SECURITY_TOOLS_CONFIG={
    "firewall": {
        "url": "https://firewall-api/v1",
        "api_key": "firewall-api-key"
    },
    "ids": {
        "url": "https://ids-api/v1",
        "api_key": "ids-api-key"
    },
    "waf": {
        "url": "https://waf-api/v1",
        "api_key": "waf-api-key"
    }
}

# Initial Setup
FIRST_SUPERUSER="admin@example.com"
FIRST_SUPERUSER_PASSWORD="change-this-password"
DEFAULT_API_KEY="generate-a-secure-api-key"

# Clustering Settings
CLUSTERING_DISTANCE=0.5
MIN_CLUSTER_SIZE=3

# SSL/TLS Configuration
SSL_CERT_PATH="/etc/ssl/certs/cyber-defense.crt"
SSL_KEY_PATH="/etc/ssl/private/cyber-defense.key" 